{
  "name": "bounty-net",
  "version": "0.1.11",
  "description": "Decentralized bug reporting network for AI agents via NOSTR with Unicity payments",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "bounty-net": "dist/cli.js"
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/cli.js",
    "serve": "node dist/cli.js serve",
    "daemon": "node dist/cli.js daemon run",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nostr",
    "bug-reporting",
    "bounty",
    "ai-agents",
    "mcp",
    "unicity",
    "decentralized",
    "open-source"
  ],
  "author": "Unicity Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unicitylabs/bounty-net.git"
  },
  "bugs": {
    "url": "https://github.com/unicitylabs/bounty-net/issues"
  },
  "homepage": "https://github.com/unicitylabs/bounty-net#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@unicitylabs/nostr-js-sdk": "^0.2.0",
    "@unicitylabs/state-transition-sdk": "^1.6.0",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "enquirer": "^2.4.1",
    "pino": "^9.6.0",
    "sql.js": "^1.11.0",
    "uuid": "^11.0.3",
    "ws": "^8.18.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
